      <div class="row">

      	<div class="col-lg-3">

      		<h1 class="my-4">Shop By Category</h1>
      		<div class="list-group">
      			<%Category.all.each do |category|%>
      			<%=link_to category.name , category , class: "list-group-item" , remote: true%>
      			<%end%>
      	
      		</div>

      	</div>
      	<!-- /.col-lg-3 -->

      	<div class="col-lg-9" , id="productList">

      		<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
      			<ol class="carousel-indicators">
      				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

      			</ol>
      			<div class="carousel-inner" role="listbox">

      				<div class="carousel-item active">
      					<img class="d-block img-fluid" src="https://sonovideo.com/wp-content/uploads/2014/07/CANON-EF-LENS-900X350.jpg" alt="First slide">
      				</div>

      				<div class="carousel-item">
      					<img class="d-block img-fluid" src="https://cdn.pp.slimpay.com/blog/2016/12/06192933/DZN-Blog-Hero-900x350-SuccessfulBusiness_v2.jpg" alt="Second slide">
      				</div>

      				<div class="carousel-item">
      					<img class="d-block img-fluid" src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-serving-suggestions-tile-900x350/berry-easy-cheesecake-900x350.jpg" alt="Third slide">
      				</div>

      				<div class="carousel-item">
      					<img class="d-block img-fluid" src="http://blog.blacklotus9.com/blog/wp-content/uploads/2013/06/AdidasBasketball2013_JoyBluePink.jpg" alt="Third slide">
      				</div>
      				

      				<div class="carousel-item">
      					<img class="d-block img-fluid" src="http://glowingthoughts.com/wp-content/uploads/2017/11/specs_preview-I-PHONE-X.png" alt="Third slide">
      				</div>

      			</div>
      			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
      				<span class="sr-only">Previous</span>
      			</a>
      			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      				<span class="carousel-control-next-icon" aria-hidden="true"></span>
      				<span class="sr-only">Next</span>
      			</a>
      		</div>

      		<div class="row">
      			<%@products.each do |product|%>

      			<div class="col-lg-4 col-md-6 mb-4">
      				<div class="card h-100">
      					<%=link_to image_tag(product.feature_image_url,class: "card-img-top" , size: "600x350"), product %>
      					<div class="card-body">
      						<h4 class="card-title">
      							<%=link_to product.name, product%>
      						</h4>
      						<h5>$<%=product.price %></h5>
      						<p class="card-text"><%=product.description.truncate(100)%></p>


      						<%if user_signed_in?%>
      							<%= form_for(CartLineItem.new , remote: true) do |f|%>
    	  						<%= f.hidden_field :product_id, value: product.id%>
	      						<%= f.hidden_field :quantity, value: 1%>
      							<%= f.submit "Add to cart" ,class: "btn btn-warning"%>
      						<%end%>
      						<%= form_for @wishlist do |f|%>
	      						<%= f.hidden_field :product_id, value: product.id%>
      							<%= f.submit "Move to Wishlist" ,class: "btn btn-info"%>
      						<%end%>

      						<%end%> 

      					</div>
      					<div class="card-footer">
      						<small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734; </small>
      						<% if product.reviews.any?%>
      						<%= (product.reviews.pluck(:rating).inject(:+)/product.reviews.count).floor %>.0 stars
      						<%else%>
      						0.0 
      						<%end%>

      					</div>
      				</div>
      			</div>

      			<%end%>














      		</div>
      		<!-- /.row -->

      	</div>
      	<!-- /.col-lg-9 -->

      </div>













