<h2> Product name :<%= @review.product.name.upcase%></h2>
<%= form_for @review do |f|%>
<label for = "review_body"> Body : </label><br/>


<%= f.text_area :body %> <br/>


<%= f.hidden_field :product_id,value: @review.product_id%><br/>

<label for= "review_rating"> Rating </label><br/>
<%= f.radio_button :rating, 1 %> 1
<%= f.radio_button :rating, 2 %> 2
<%= f.radio_button :rating, 3 %> 3
<%= f.radio_button :rating, 4 %> 4
<%= f.radio_button :rating, 5 %> 5 <br/>
<%= f.submit "Add Review" %>

<%end%>

